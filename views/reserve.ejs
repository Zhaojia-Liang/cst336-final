<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h3> RESERVE SEAT </h3>
		<a class='btn btn-primary' href='/HOME'>Home</a>
	<br><br>
	
	<form action='/book' method='GET'>
		<div class='form-group row'>
			<label for='from' class='col-sm-4 col-form-label'>From</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='start' name='start' placeholder='Departure City' required>
			</div>
		</div>
		<div class='form-group row'>
			<label for='To' class='col-sm-4 col-form-label'>To</label>
			<div class='col-sm-4'>
				<input type='text' class='form-control' id='end' name='end' placeholder='Destination' required>
			</div>
		</div>
		<div class='form-group row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4'>
				<button class='btn btn-success btn-block'>Search</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
	
	<hr>
	<%if(flight.flightnumber.length){%>
		<h3> Your Current Booking </h3>
		<div class='form-group row'>
			<div class='col-sm-4'>Flight Number</div>
			<div class='col-sm-4'>De
				<div class='form-check form-check-inline'>
                    <input class='form-check-input' type='radio' name='sex' id='male' value='M'>
                    <label class='form-check-label' for='male'>Male</label>
                </div>
                <div class='form-check form-check-inline'>
                    <input class='form-check-input' type='radio' name='sex' id='female' value='F'>
                    <label class='form-check-label' for='female'>Female</label>
                </div>
			</div>
		</div>
	<%}else{%>
		<h3> You have no flights</h3>
	<%}%>
	</div>
</div>

<%- include ('templates/footer'); -%>