<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h3> Welcome to OtterAirway </h3>
		<a class='btn btn-primary' href='/management'>Return</a>
		</div>
		<h3>Are you sure?</h3>
		<form action='/flightInfo/<%=flight.flightId%>/delete' method='GET'>
	    	<div class='form-group row'>
	        Are you sure you want to delete the flight from <%=flight.from%> to <%=flight.to%>? 
	        This cannot be undone.
        	</div>
		<div class='form-group row'>
			<div class='col-sm-4'>
			    <a class='btn btn-danger btn-block' href='/management'>No, Cancel</a>
			</div>
			<div class='col-sm-4'>
				<button class='btn btn-primary btn-block'>Yes, Delete</button>
			</div>
			<div class='col-sm-4'></div>
		</div>
	</form>
</div>
<%- include ('templates/footer'); -%>