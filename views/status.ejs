<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1 style='text-align: center'>Your Flight Information</h1>
		<br>
		<div class='form-group row'>
			<div class='col-sm-6'></div>
			    <a class='btn btn-primary' href='/reserve'>Back</a>
		</div>
		<br>
		<br>
			<div class='form-group row'>
				<div class='col-sm-1'></div>
				<div class='col-sm-2'>
					<h5>FlightNumber</h5>
				</div>
				<div class='col-sm-2'>
					<h5>From</h5>
				</div>
				<div class='col-sm-2'>
					<h5>To</h5>
				</div>
				<div class='col-sm-2'>
					<h5>Depart</h5>
				</div>
				<div class='col-sm-2'>
					<h5>Return</h5>
				</div>
				<div class='col-sm-1'></div>
			</div>
			<hr>
			<div class='form-group row'>
				<div class='col-sm-1'></div>
				<div class='col-sm-2'>
					<h5><%=flight.flightnumber%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.start%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.end%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.departure%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.arrival%></h5>
				</div>
				<div class='col-sm-1'></div>
			</div>
	</div>
</div>

<%- include ('templates/footer'); -%>