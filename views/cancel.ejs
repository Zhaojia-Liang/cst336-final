<%- include ('templates/header'); -%>

<div class='container'>
	<div class='jumbotron'>
		<h1>Below is your flight information</h1>
		<br>
			<div class='form-group row'>
				<div class='col-sm-1'></div>
				<div class='col-sm-2'>
					<h5>FlightNumber</h5>
				</div>
				<div class='col-sm-2'>
					<h5>From</h5>
				</div>
				<div class='col-sm-2'>
					<h5>To</h5>
				</div>
				<div class='col-sm-2'>
					<h5>Depart</h5>
				</div>
				<div class='col-sm-2'>
					<h5>Return</h5>
				</div>
				<div class='col-sm-1'></div>
			</div>
			<hr>
			<div class='form-group row'>
				<div class='col-sm-1'></div>
				<div class='col-sm-2'>
					<h5><%=flight.flightnumber%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.start%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.end%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.departure%></h5>
				</div>
				<div class='col-sm-2'>
					<h5><%=flight.arrival%></h5>
				</div>
				<div class='col-sm-1'></div>
			</div>
		    <br>
		    <div class='form-group row'>
		    	<div class='col-sm-2'></div>
		    	<div class='col-sm-4'>
					<a class='btn btn-info' href='/HOME'>BACK</a>
				</div>
				<div class='col-sm-4'>
					<a class='btn btn-danger' href='/cancel/<%=flight.flightnumber%>''>DELETE</a>
				</div>
				<div class='col-sm-2'></div>
		    </div>
	</div>
</div>

<%- include ('templates/footer'); -%>